<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="barcodeEditTextStyle">@style/BarcodeEditText</item>
        <item name="priceEditTextStyle">@style/PriceEditText</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="barcodeEditTextStyle">@style/BarcodeEditText</item>
        <item name="priceEditTextStyle">@style/PriceEditText</item>
    </style>

    <style name="ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/actionbar_color</item>
        <item name="icon">@android:color/transparent</item>
        <item name="titleTextStyle">@style/ActionBar.TitleText</item>
    </style>

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BarcodeEditText" parent="Widget.AppCompat.EditText">
        <item name="android:hint">@string/barcode_edit_hint</item>
        <item name="android:inputType">numberSigned</item>
    </style>

    <style name="PriceEditText" parent="Widget.AppCompat.EditText">
        <item name="android:hint">0.00</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    //Текста
    //Заголовок карточки товара
    <style name="TextTitle1" parent="TextAppearance.AppCompat">
        <item name="android:textSize">10pt</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="price_on_map" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">12pt</item>
        <item name="android:textColor">#011ef9</item>
    </style>

    //Заголовок списка товара
    <style name="ListTextTitle1" parent="TextAppearance.AppCompat">
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">#000000</item>
    </style>

    //Средняя цена списка товара
    <style name="ListMidPrice" parent="TextAppearance.AppCompat">
        <item name="android:textSize">10pt</item>
        <item name="android:textColor">#83835B</item>
        <item name="android:textStyle">bold</item>
    </style>

    //Средняя цена товара
    <style name="CardMidPrice" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14pt</item>
        <item name="android:textColor">#83835B</item>
        <item name="android:textStyle">bold</item>
    </style>

    //Диапазон цен списка товара
    <style name="ListLowPrice" parent="TextAppearance.AppCompat">
        <item name="android:textSize">10pt</item>
        <item name="android:textColor">#CE6161</item>
        <item name="android:textStyle">bold</item>
    </style>

    //Диапазон цен товара
    <style name="CardLowPrice" parent="TextAppearance.AppCompat">
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">#CE6161</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProductRaitigBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#6e6c54</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="colorControlActivated">@android:color/holo_orange_dark</item>
    </style>

</resources>
