<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_search_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/search_panel_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/search_text_style"
            android:gravity="end|center_vertical"
            android:hint="@string/search_panel_text_hint"
            android:imeOptions="actionSearch"
            android:paddingRight="8dp"
            android:singleLine="true"
            android:textAppearance="@style/ListTextTitle1"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/search_panel_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:layout_weight="0"
            android:src="@drawable/barcode_icon"
            app:srcCompat="@drawable/barcode_icon" />

    </LinearLayout>

</RelativeLayout>